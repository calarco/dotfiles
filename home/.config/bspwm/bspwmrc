#! /bin/sh

bspc monitor -d '|' '|' '|' '|' '|' '|'

desktop_config() {
	bspc config $1 $2
	for M in $(bspc query -M); do
		bspc config -m $M $1 $2
	done
}

desktop_config border_width 0
bspc config normal_border_color "#1b1b1b"
bspc config focused_border_color "#1b1b1b"
bspc config presel_border_color "#4A90D9"
bspc config urgent_border_color "#4A90D9"
bspc config normal_sticky_border_color "#1b1b1b"
bspc config focused_sticky_border_color "#1b1b1b"
desktop_config window_gap 40
bspc config split_ratio	0.4
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config focus_follows_pointer true
bspc config ignore_ewmh_focus true
bspc config external_rules_command ~/.config/bspwm/external_rules

bspc rule -a urxvtq floating=on follow=on focus=on sticky=on
bspc rule -a ncmpcpp pseudo_tiled=on desktop=^6
bspc rule -a slingshot-launcher floating=on
bspc rule -a obshutdown floating=on
bspc rule -a nitrogen floating=on
bspc rule -a chromium_app_list floating=on
bspc rule -a Steam desktop=^5 follow=false
bspc rule -a chromium desktop=^1

wings &
sleep 5s && urxvtc -name ncmpcpp -e ncmpcpp &
sleep 5s && geary --hidden &
