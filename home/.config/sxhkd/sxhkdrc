#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

# Close / kill window

super + {_,shift + }q
	bspc node -{c,k}

# Rotate leaves of tree
super + shift + {comma,period}
	bspc desktop -R {90,270}

# Toggle monocle
super + t
	bspc desktop -l next

# Balance tree
super + b
	bspc desktop -B

# set the window state
super + {a,d,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Toggle floating, pseudotiled, fullscreen
#super + {s,d,f}
#	bspc window -t {floating,pseudo_tiled,fullscreen}

#super + {grave,Tab}
#	bspc {node,desktop} -f last

super + Tab
	bspc desktop -f last

super + grave
	bspc node -s next

super + y
	bspc window -w last.manual

# Move current window to largest space
super + m
	bspc window -s biggest

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + bracket{left,right}
	bspc desktop -f {prev,next}

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

super + alt + {h,j,k,l}
	bspc node -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}

#
# mouse bindings
#

~button1
	bspc pointer -g focus

# Move or resize window
super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

#super + !button{1-3}
#	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

# Change window gap
super + {comma,period}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

#
# exec
#

grave
	urxvtq

super + Return
	urxvtc

super + space
	dmenu_launch

super + shift + space
	dmenu_run

Print
	scrot -q 100 -e 'mv $f ~/Im√°genes/'

XF86AudioPrev
	 mpc prev

XF86AudioNext
	 mpc next

XF86AudioPlay
	 mpc toggle

XF86AudioStop
	 mpc stop

XF86Audio{Lower,Raise}Volume
	 amixer set Master 1%{-,+}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
